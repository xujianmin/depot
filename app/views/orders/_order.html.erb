<div id="<%= dom_id order %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= order.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= order.address %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= order.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Pay type:</strong>
    <%= order.pay_type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Check | Routing Number:</strong>
    <%= order.routing_number %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Check | Account Number:</strong>
    <%= order.account_number %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Credit Card | Card Number:</strong>
    <%= order.credit_card_number %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Credit Card | Expiration Date:</strong>
    <%= order.expiration_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">PO | PO Number:</strong>
    <%= order.po_number %>
  </p>

</div>
