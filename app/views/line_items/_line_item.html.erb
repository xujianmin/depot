<tr>
  <td class="text-right"><%= line_item.quantity %></td>
  <td>&times;</td>
  <td class="pr-2">
    <%= line_item.product.title %>
  </td>
  <td class="text-right font-bold">
    <%= number_to_currency(line_item.price) %>
  </td>
  <td>
    <%= button_to 'Delete', line_item, method: :delete, class: 'ml-2 rounded-lg py-1 px-2 text-white bg-blue-600' %>
  </td>
</tr>